#include <stdio.h>
#include <stdlib.h>

struct Node
{
    int data;
    struct Node * next;
};

void add_fisrt(struct Node ** head, int data)
{
    struct Node * tmp = malloc(sizeof(struct Node));
    tmp->data = data;
    tmp->next = *head;
    *head = tmp;
}

void print(struct Node * head)
{
    struct Node * tmp = head;
    while (tmp != NULL)
    {
        printf("%d -> ", tmp->data);
        tmp = tmp->next;
    }
    printf("\n");
}

struct Node * find_first(struct Node * head, int x)
{
    struct Node * tmp = malloc(sizeof(struct Node));
    tmp = head;
    while (tmp != NULL)
    {
        if (tmp->data == x)
        {
            return tmp;
        }
        tmp = tmp->next;
    }
    return NULL;
}

struct Node * find_last(struct Node * head, int x)
{
    struct Node * tmp = malloc(sizeof(struct Node));
    tmp = head;
    struct Node *ans = malloc(sizeof(struct Node));
    ans = NULL;
    while (tmp != NULL)
    {
        if (tmp->data == x)
        {
            ans = tmp;
        }
        tmp = tmp->next;
    }
    return ans;
}

int main()
{
    struct Node * head = NULL;
    for (int i = 0; i < 10; i++)
    {
        add_fisrt(&head, i);
    }
    
    add_fisrt(&head, 4);
    
    print(head);
    
    struct Node * found1 = find_first(head, 4);
    struct Node * next_node1 = found1->next;
    printf("%d\n", *next_node1);
    
    struct Node * found2 = find_last(head, 4);
    struct Node * next_node2 = found2->next;
    printf("%d\n", *next_node2);
    
    return 0;
}
